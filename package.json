{
  "name": "sunbeam",
  "version": "1.0.0",
  "description": "Focus management system for TV applications",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --content-base demo/ --port 35645 --inline",
    "compile": "babel src --out-dir dist --ignore **/*.spec.js",
    "test": "mocha test/**/*.js --compilers js:babel-register",
    "test:watch": "mocha test/**/*.js --compilers js:babel-register --watch --reporter min",
    "lint": "eslint --ignore-pattern **/*.spec.js ./src",
    "git:add-dist": "git add ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LibertyGlobal/sunbeam.git"
  },
  "keywords": [
    "tv",
    "navigation",
    "focus-management",
    "react"
  ],
  "author": "Vladimir Guguiev <wizardzloy@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LibertyGlobal/sunbeam/issues"
  },
  "homepage": "https://github.com/LibertyGlobal/sunbeam#readme",
  "devDependencies": {
    "babel": "^6.3.13",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.17",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.3.13",
    "eslint": "^1.10.3",
    "eslint-config-libertyglobal": "^2.0.0",
    "eslint-plugin-react": "^3.11.3",
    "expect": "^1.13.4",
    "expect-jsx": "^2.2.1",
    "mocha": "^2.3.4",
    "pre-commit": "^1.1.2",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "pre-commit": [
    "compile",
    "git:add-dist"
  ]
}
